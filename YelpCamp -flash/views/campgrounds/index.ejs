<% layout('layouts/boilerplate') %>
<h1>All Campgrounds</h1>
<div>
    <a href="/campgrounds/new">Add Campgrounds</a>
</div>

    <% for(let campground of campgrounds) {%>
        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" src="<%= campground.image %>" alt="">
                </div>
                <div class="col-md-8">
                    <div class="card_body">
                        <h5 class="card-title"><%= campground.title %></h5>
                        <p class="card-text"><%= campground.description %></p>
                       <p class="class-text">
                            <small class="text-muted"><%= campground.location %></small>
                       </p>
                       <a class="btn-primary" href="/campgrounds/<%=campground._id %>">View <%= campground.title %></a>
                    </div>
                </div>
            </div>
            
        </div>
       <!-- 
        <ul>
             <li><a href="/campgrounds/<%= campground._id %>"><%=  campground.title %></li> 
        </ul>
        -->
 
    <% } %>


