<% layout('layouts/boilerplate') %>
<div class="container">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card shadow">
                <img src="https://media.istockphoto.com/id/465390661/photo/moraine-lake-banff-national-park.webp?b=1&s=170667a&w=0&k=20&c=gX02peWydWFCWOIFH9UBXGHUfuYnKfvSVAURoTeNiRg="
                    class="card-img-top">
                <div class="card-body ">
                    
                    <h5 class="card-title">Login</h5>
    
                    <form action="/register" method="POST" novalidate  class = validated-form>
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" id="username" name="username" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="email">Email</label>
                            <input class="form-control" type="email" id="email" name="email" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="d-grid">
                            <button class="btn btn-success">Register</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


