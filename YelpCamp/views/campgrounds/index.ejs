<% layout('layouts/boilerplate') %>
<h1>All Campgrounds</h1>
<div id="cluster-map"></div>

<div>
    <a href="/campgrounds/new">Add Campgrounds</a>
</div>

<% for(let campground of campgrounds) {%>
    <div class="card mb-3" >
        <div class="row">
            <div class="col-md-4">
                <%if(campground.images.length) {%>
                    <img class="img-fluid" src="<%= campground.images[0].url%>" alt="">
                <% } else {%>
                    <img class="img-fluid" src="https://res.cloudinary.com/dxuhsqwy4/image/upload/v1703082752/YelpCamp/ud7zwsu4uwqw5ituznmm.jpg" alt="">
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card_body">
                    <h5 class="card-title"><%= campground.title %></h5>
                    <p class="card-text"><%= campground.description %></p>
                    <p class="class-text">
                        <small class="text-muted"><%= campground.location %></small>
                    </p>
                    <a class="btn-primary" href="/campgrounds/<%=campground._id %>">View <%= campground.title %></a>
                </div>
            </div>
        </div>
        
    </div>
    <!-- 
    <ul>
            <li><a href="/campgrounds/<%= campground._id %>"><%=  campground.title %></li> 
    </ul>
    -->

<% } %>

<script>
    const mapToken ='<%-process.env.MAPBOX_TOKEN%>';    
    const cmpgrounds ={features:<%- JSON.stringify(campgrounds) %>};
</script>
<script src="/javascripts/clusterMap.js"></script>


